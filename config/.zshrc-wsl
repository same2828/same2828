# Aliases
#--------
# alias g++="g++-13"
# alias gcc="gcc-13"
# alias gclean='git reset --hard && git clean -dfx'
# alias gcp='(){ ga . && gc -m $1 && gp;}'
alias cls="clear"
alias cpuhogs='ps wwaxr -o pid,stat,%cpu,%mem,time,command | head -10' # Show Top 10 CPU Hogs
alias gclean='git fetch --all --prune && git reset --hard origin/master && git clean -dfx'
alias glo="git log --pretty='%C(yellow)%h %C(cyan)%cd %C(red)%aN%Cgreen%d %Creset%s' --date=format:'%d/%m/%y %I:%M%P'"
# alias glo="git log --pretty='%C(yellow)%h %C(cyan)%cd %C(magenta)%aN%Cgreen%d %Creset%s' --date=format:'%d/%m/%y %I:%M:%S%P'"
alias grep='grep --color=always'
alias gstash='git stash --all'
alias ll='ls -AlF --color=auto'
# alias ll='ls -AoF --color=auto'
alias ls='ls --color=auto'
alias memhogs='ps wwaxm -o pid,stat,vsize,rss,time,command | head -10' # Show Top 10 Memory Hogs
alias rezsh='source ~/.zshrc'
alias untar="tar -xvf"

# Custom Functions
# ----------------
# Kill a process that is using a port (usage: killport 3000)
killport() {
  kill -9 $(lsof -t -i:$1)
}
# Show All Processes Owned By User (usage: mine)
mine() {
  ps "$@" -u "${USER}" -o pid,%cpu,%mem,start,time,bsdtime,command --sort=-%cpu # Note: --sort=-%cpu does NOT work on macOS
  # ps "$@" -u "${USER}" -o pid,%cpu,%mem,start,time,bsdtime,command
}
# Create directory and cd into it (usage: mkcd dirName)
mkcd() {
  mkdir -p "$@"
  cd "$@"
}

